@model ICollection<M151_WebShop.Models.Movie>

<button>
    @Html.ActionLink("Create Article", "CreateArticle")
</button>

@foreach (M151_WebShop.Models.Movie movie in Model)
{
    using (Html.BeginForm($"GetArticle/{movie.Id}", "Shop", FormMethod.Get, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
    {
        Html.AntiForgeryToken();
        <hr />
        <button style="background-color:white; border:none;">
            <p>@movie.Name</p>
            <p>@movie.Genre</p>
            @*<p>Veröffentlicht von: @movie.User.UserName</p>*@
            <p>@movie.Price</p>
            <p>@movie.USK</p>
        </button>
        <hr />
    }
    using (Html.BeginForm("DeleteArticle", "Shop", new { movieId = movie.Id }, FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
    {
        //if (User.IsInRole("Administrator"))
        //{
        {
                @Html.AntiForgeryToken()
                <input type="submit" class="btn btn-primary inline" value="delete" onclick="return confirm('Do you want to delete the Movie @movie.Name ?')" />
        }
        //}
    }
}